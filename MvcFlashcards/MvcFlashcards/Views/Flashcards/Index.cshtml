@model MvcFlashcards.Models.FlashcardTopicViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Flashcards" asp-action="Index" method="get">
    <p> Topics:
        <select asp-for="flashcardTopic" asp-items="Model.topics">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.flashcards[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flashcards[0].Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flashcards[0].AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flashcards[0].Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.flashcards)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @* This is where the edit, delete and details links are created *@
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
